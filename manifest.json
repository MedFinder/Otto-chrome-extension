{
    "name": "Otto",
    "description": "Overlay smart assistant on Todoist and Microsoft To Do",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "*://*.todoist.com/*",
        "*://*.to-do.live.com/*",
        "*://to-do.microsoft.com/*"
    ],
    "action": {
        "default_title": "Activate Smart Assistant",
        "default_icon": {
            "16": "icons/otto-logo_16.png",
            "32": "icons/otto-logo_32.png",
            "48": "icons/otto-logo_48.png",
            "128": "icons/otto-logo_128.png"
        }
    },
    "icons": {
        "16": "icons/otto-logo_16.png",
        "32": "icons/otto-logo_32.png",
        "48": "icons/otto-logo_48.png",
        "128": "icons/otto-logo_128.png"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.todoist.com/*",
                "*://*.to-do.live.com/*",
                "*://to-do.microsoft.com/*"
            ],
            "js": [
                "inject.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "index.html",
                "main.js",
                "index.js",
                "assets/*",
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}